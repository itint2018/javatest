{{>header}}
<div class="container-fluid">
    <h2 class="text-center">Бронирование комнаты</h2>
    <div class="card shadow" style="margin-top: 1rem">
        <div class="card-body">
            <div class="mb-auto">
                <form action="/api/rooms/{{id}}/reserve" method="post" id="form" onsubmit=";OnSubmit(this)">
                    <Label for="date" class="form-label">Выберите дату</Label>
                    <input type="date" min="{{minDate}}" class="form-control" id="date" name="date">
                    <Label for="timeStart" class="form-label">Выберите время начала</Label>
                    <input type="time" min="{{minTime}}" class="form-control" id="timeStart"
                           name="timeStart">
                    <Label for="timeEnd" class="form-label">Выберите время конца</Label>
                    <input type="time" class="form-control" id="timeEnd" name="timeEnd">
                    <label for="description" class="form-label">Описание</label>
                    <input type="text" class="form-control" id="description" name="description">
                    <div style="margin-top: .5rem" class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">Забронировать</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/../js/app.js"></script>
<script src="/../js/md5_min.js"></script>
<script lang="js">
    document.getElementById("form").addEventListener("submit", event => {
        event.preventDefault()
        console.log(document.getElementById('timeStart').nodeValue > document.getElementById('timeEnd').nodeValue)
    })
</script>
{{>footer}}