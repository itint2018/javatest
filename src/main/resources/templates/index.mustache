<html>
<head>
    <title>Переговорные</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <h2 class="text-center text-capitalize">Комнаты</h2>

    <button type="button" class="btn btn-primary" style="margin-left: auto" onclick="location.href='/rooms/new'">Добавить комнату</button>
    {{#rooms}}
        <li style="list-style-type:none">
            <ul>
                <div class="card" onclick="location.href='/rooms/{{id}}'">
                    <div class="card-body">
                        <div>
                            <h5>{{name}}
                                {{#optionsRooms}}
                                    <img src="/images/{{name}}.png" alt="{{name}}"/>
                                {{/optionsRooms}}
                            </h5>
                        </div>
                        <p>{{countOfPlaces}} мест
                        </p>
                    </div>
                </div>
            </ul>
        </li>
    {{/rooms}}

</div>
</body>
</html>