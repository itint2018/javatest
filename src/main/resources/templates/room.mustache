{{>header}}
{{#room}}
    <div class="container-fluid">

        <div class="card shadow" style="margin-top: 1rem">
            <div class="card-body">
                <div style="margin-top: .5rem" class="d-flex justify-content-end">
                    <button class="btn btn-primary">
                        <span class="material-icons">edit</span>
                        <span>Редактировать</span>
                    </button>
                </div>
                <p>{{countOfPlaces}} мест</p>
                <p>{{description}}</p>

                <table class="table">
                    <thead>
                    <th scope="col"></th>
                    <th scope="col">В комнате имеется</th>
                    </thead>
                    <tbody>
                    {{#optionsRooms}}
                        <tr scope="row">
                            <th><img src="/images/{{name}}.png" alt="{{name}}"/></th>
                            <th>{{localizedName}}</th>
                        </tr>
                    {{/optionsRooms}}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
{{/room}}

<div class="card shadow" style="margin-top: 1rem">
    {{^roomDetail.isEmpty}}
        <div class="table-responsive">
            <table class="table table-bordered" style="margin-top: .5rem">
                <thead>
                <th scope="col">Сотрудник</th>
                <th scope="col">Офис менеджер</th>
                <th scope="col">Начало</th>
                <th scope="col">Конец</th>
                <th scope="col">Описание</th>
                <th scope="col"></th>
                </thead>
                <tbody>
                {{#roomDetail}}
                    <tr scope="row">
                        <th>{{user}}</th>
                        <th>{{proof}}</th>
                        <th>{{start}}</th>
                        <th>{{end}}</th>
                        <th>{{description}}</th>
                        <th>
                            <button class="btn btn-secondary" onclick="location.href = '/reserve_room/{{id}}'">Перейти в
                                мероприятию
                            </button>
                        </th>
                    </tr>
                {{/roomDetail}}
                </tbody>
            </table>
        </div>
    {{/roomDetail.isEmpty}}
    {{#roomDetail.isEmpty}}
        <h5 class="text-center">Список пуст</h5>
    {{/roomDetail.isEmpty}}
    <div class="d-flex justify-content-end" style="margin-top: .5rem">
        <button class="btn btn-primary" onclick="location.href='/rooms/{{id}}/reserve'">Забронировать</button>
    </div>
</div>
{{>footer}}