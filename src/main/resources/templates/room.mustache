<html>
<head>
    <title>Переговорные</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
</head>
<body>
<div class="container">
    {{#room}}
        <h1>{{name}}</h1>
        <div class="card" onclick="location.href='/rooms/{{id}}'">
            <div class="card-body">
                <p>{{countOfPlaces}} мест</p>
                <p>{{description}}</p>
            </div>
        </div>
    {{/room}}
    <div class="card">
        <table class="table">
            <thead>
            <th scope="col">Сотрудник</th>
            <th scope="col">Офис менеджер</th>
            <th scope="col">Начало</th>
            <th scope="col">Конец</th>
            <th scope="col">Описание</th>
            </thead>
            <tbody>
            {{#roomDetail}}
                <tr scope="row">
                    <th>{{user}}</th>
                    <th>{{proof}}</th>
                    <th>{{start}}</th>
                    <th>{{end}}</th>
                    <th>{{description}}</th>
                </tr>
            {{/roomDetail}}
            </tbody>
        </table>
    </div>
</div>
</body>
</html>